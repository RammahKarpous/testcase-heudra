{%- liquid
  assign primary_menu_styling = 'p-4 bg-white border border-gray-border hover:border-blue-dark'
  assign secondary_menu_styling = 'p-4 border border-gray-border hover:border-blue-dark'
-%}

<section class="drop-shadow-[0_0px_10px_rgba(0,0,0,16%)] absolute w-full">
  <div class="z-10 -mt-10 overflow-hidden transition bg-body md:hidden collabsed" id="mobile-navigation-menu">
    {%- render 'component-hamburger-menu' -%}

    <div class="relative z-0 flex flex-col gap-4 pt-12 pb-4">
      <div class="container flex justify-between">
        {%- render 'component-search-bar' -%}

        <div class="flex items-center gap-2 shrink-0">
          {%- render 'icon-phone' -%}
          <p class="font-bold text-black underline font-ropa-light">0488 44 10 58</p>
        </div>
      </div>

      <div class="flex flex-col gap-8">
        <div class="container grid grid-cols-1 gap-3 sm:grid-cols-2 md:grid-cols-3">
          {%- for link in linklists['hoofd-menu-mobiel'].links -%}
            {%- render 'component-navigation-link',
              link_url: link.url,
              link_text: link.title,
              styles: primary_menu_styling
            -%}
          {%- endfor -%}
        </div>

        <div class="container grid grid-cols-1 gap-3">
          {%- for link in linklists['secundaire-menu-mobiel'].links -%}
            {%- render 'component-navigation-link',
              link_url: link.url,
              link_text: link.title,
              styles: secondary_menu_styling
            -%}
          {%- endfor -%}
        </div>
      </div>

      {%- render 'component-btw' -%}
    </div>
  </div>

  <div class="ml-auto -z-10 bottom-10 h-[50px] w-[70px]">
    <div class="bg-body navigation-expansion-shape">
			{% comment %} {%- render 'snippet-navigation-expansion' -%} {% endcomment %}
		</div>
  </div>
</section>

{%- style -%}
	.navigation-expansion-shape {
		clip-path: polygon(25% 0%, 100% 0%, 100% 100%, 25% 100%, 0% 50%);
	}
	
  #mobile-navigation-menu.collabsed > div:not(.hamburger-menu) {
    opacity: 0;
  }

  #mobile-navigation-menu.collabsed {
    padding-top: 0px;
    padding-bottom: 0px;
    height: 0px;
  }
{%- endstyle -%}
